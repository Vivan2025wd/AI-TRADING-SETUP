# ==============================================
# AI Trading Dashboard - Environment Configuration
# ==============================================

# --- Startup Training Configuration ---
# Set to "true" to skip training on startup (useful for development)
SKIP_STARTUP_TRAINING=false

# Set to "true" to force retrain all models even if they exist
FORCE_RETRAIN=false

# --- Training Parameters ---
# Symbols to train (comma-separated, leave empty for default list)
TRAINING_SYMBOLS=

# Maximum parallel training jobs
TRAINING_MAX_WORKERS=3

# --- Label Generation Configuration ---  
# Hours to look ahead for outcomes
LABEL_FORWARD_WINDOW=24

# Minimum return threshold for buy signals (e.g., 0.025 = 2.5%)
LABEL_MIN_RETURN=0.025

# Stop loss threshold for sell signals (e.g., -0.04 = -4%)
LABEL_STOP_LOSS=-0.04

# Minimum samples per class for balanced training
LABEL_MIN_SAMPLES=100

# Use volatility-adjusted thresholds
LABEL_VOL_ADJUST=true

# --- Model Training Configuration ---
# Random Forest parameters
MODEL_N_ESTIMATORS=100
MODEL_MAX_DEPTH=6
MODEL_MIN_SAMPLES_SPLIT=5
MODEL_MIN_SAMPLES_LEAF=2

# Minimum model performance thresholds
MODEL_MIN_ACCURACY=0.6
MODEL_MIN_PRECISION=0.6
MODEL_MIN_RECALL=0.6
MODEL_MIN_F1=0.6

# --- System Configuration ---
# Minimum data points required for training
MIN_DATA_POINTS=1000

# Model retraining interval (days)
RETRAIN_INTERVAL_DAYS=7

# Data quality threshold (0.0 to 1.0)
DATA_QUALITY_THRESHOLD=0.95

# --- API Configuration ---
# FastAPI settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# --- Logging Configuration ---
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# --- Database Configuration (if applicable) ---
# DATABASE_URL=sqlite:///./trading_db.sqlite

# --- External API Keys (if needed) ---
# BINANCE_API_KEY=your_binance_api_key
# BINANCE_SECRET_KEY=your_binance_secret_key

# --- Development Settings ---
# Enable debug mode
DEBUG=false

# Enable model performance monitoring
ENABLE_MONITORING=true

# Enable automatic backtesting after training
ENABLE_AUTO_BACKTEST=false